execute_on_player_state_change = i="$(mpc -f '%title%\n%artist%\n%album%')"; notify-send -t 10000 "$(head -n3 <<< """$i""")" "$(tail -n2 <<< """$i""")"

# user interface
autocenter_mode = yes
progressbar_look = ::
cyclic_scrolling = yes
song_columns_list_format = (20)[]{a} (6f)[green]{NE} (50)[white]{t|f:Title} (20)[cyan]{b} (7f)[magenta]{lr}

