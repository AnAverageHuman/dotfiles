#!/bin/bash
# File: ~/.functions

a() {
    "$@"
    local e=$?
    [ $e != 0 ] && local urgency='--urgency=critical'

    notify-send $urgency "$*" "Process completed."
    return $e
}

cd() {
    [ $# -eq 0 ] && DIR=${HOME} || DIR=$1
    builtin pushd "${DIR}" > /dev/null
}

pb() {
    curl -F "c=@${1:--}" https://ptpb.pw/
}

pbs() {
    curl -F "c=@${1:--}" -F sunset=3600 -F p=1 https://ptpb.pw/
}

genpasswd() {
    tr -dc "a-zA-Z0-9-_!@#$%^&*()_+{}|:<>?=" < /dev/random | head -c "${1:-20}"
    printf "\n"
}

weather() {
    curl -sS http://wttr.in/"$1" | head -n -2
}

# create and move into directory
mkcd() {
    mkdir -p "$1" && cd "$1" || return
}

# move to directory and list its contents
lcd() {
    cd "$1" && ls || return
}

shred() {
    if [ $# -gt 0 ]; then
        find "$@" -type f -print0 \
            | xargs -0 /usr/bin/shred --random-source=/dev/random --remove=wipesync --verbose --zero \
            && rm -rf "$@"
        sync
    fi
}

